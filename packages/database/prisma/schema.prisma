// packages/database/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 食材モデル
model Ingredient {
  id        String   @id @default(cuid())
  name      String   // 食材名 (例: にんじん)
  quantity  Int      // 数量
  unit      String   // 数え方 (例: 本, 個, g)
  category  String?  // 分類 (野菜, 肉, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// レシピ提案履歴モデル
model RecipeSuggestion {
  id          String   @id @default(cuid())
  queryIngredients String // 提案に使った食材リスト(JSON)
  result      String   // 提案結果(JSON)
  createdAt   DateTime @default(now())
}
